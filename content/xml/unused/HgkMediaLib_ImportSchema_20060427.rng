    <define name="entry_element">
        <element name="entry">
            <attribute name="type">
                <value>default</value>
            </attribute>
            <ref name="label_attribute"/>
            <optional>
                <ref name="lang_attribute"/>
            </optional>
            <choice>
                <group>
                    <attribute name="data_type">
                        <value>INTEGER</value>
                    </attribute>
                    <attribute name="value" >
                        <data type="integer" />
                    </attribute>
                </group>
                <group>
                    <attribute name="data_type">
                        <value>NUMERIC</value>
                    </attribute>
                    <attribute name="value">
                        <data type="decimal" />
                    </attribute>
                </group>
                <group>
                    <attribute name="data_type">
                        <value>VARCHAR</value>
                    </attribute>
                    <attribute name="value">
                        <data type="token" />
                    </attribute>
                </group>
                <group>
                    <attribute name="data_type">
                        <value>TIME</value>
                    </attribute>
                    <attribute name="value">
<!--                         <data type="time" /> -->
                        <data type="token" />
                    </attribute>
                </group>
                <group>
                    <attribute name="data_type">
                        <value>DATE</value>
                    </attribute>
                    <attribute name="value">
                        <data type="token"/>
                    </attribute>
                </group>
            </choice>
        </element>
    </define>

    <define name="name_element">
        <element name="entry">
            <attribute name="type">
                <value>default</value>
            </attribute>
            <attribute name="label">
                <value>name</value>
            </attribute>
            <optional>
                <ref name="lang_attribute"/>
            </optional>
            <attribute name="data_type">
                <value>VARCHAR</value>
            </attribute>     
            <attribute name="value">
                <data type="token" />
            </attribute>       
        </element>
    </define>
    
    <!--ATTRIBUTS-->
    
    <define name="file_size_attribute">
        <attribute name="file_size">
            <data type="token"/>
        </attribute>
    </define>
    
    <define name="format_attribute">
        <attribute name="format">
            <data type="token"/>
        </attribute>
    </define>
    
    <define name="codec_attribute">
        <attribute name="codec">
            <data type="token"/>
        </attribute>
    </define>
    
    <define name="seq_attribute">
        <attribute name="seq">
            <data type="integer"/>
        </attribute>
    </define>
    
    <define name="id_attribute">
        <attribute name="id">
            <data type="integer"/>
        </attribute>
    </define>

    <!--<define name="value_attribute">
        <attribute name="value">
            <data type="token"/>
        </attribute>
    </define>-->
    
    <!--<define name="data_type_attribute">
        <attribute name="data_type">
            <choice>
                <value>INTEGER</value>
                <value>NUMERIC</value>
                <value>VARCHAR</value>
                <value>TIME</value>
                <value>DATE</value>
            </choice>
        </attribute>
    </define>-->
    
    <define name="lang_attribute">
        <attribute name="lang">
            <choice>
                <value>de</value>
                <value>en</value>
                <value>fr</value>
                <value>it</value>
                <value></value>
            </choice>
        </attribute>
    </define>
    
    <define name="label_attribute">
        <attribute name="label">
            <data type="token"/>
        </attribute>
    </define>
</grammar>